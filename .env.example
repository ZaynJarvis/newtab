# Environment Variables for Local Web Memory
# Copy this file to .env and update the values

# ===========================================
# API Configuration (REQUIRED)
# ===========================================
# ByteDance ARK API token for LLM and embeddings
ARK_API_TOKEN=your-ark-api-token-here

# ===========================================
# Server Configuration
# ===========================================
# Host and port for the backend server
HOST=0.0.0.0
PORT=8000

# Logging level (debug, info, warning, error, critical)
LOG_LEVEL=info

# Number of workers for production (set to 1 for development)
WORKERS=1

# Enable auto-reload for development (true/false)
RELOAD=false

# ===========================================
# Database Configuration
# ===========================================
# SQLite database file path
DATABASE_FILE=./data/web_memory.db

# Query embedding cache file path
QUERY_CACHE_FILE=./data/query_embeddings_cache.json

# ===========================================
# Vector Store Configuration
# ===========================================
# Dimension of the embedding vectors
VECTOR_DIMENSION=2048

# ===========================================
# Cache Configuration
# ===========================================
# Query cache capacity (number of queries)
QUERY_CACHE_CAPACITY=1000

# Query cache TTL in days
QUERY_CACHE_TTL_DAYS=7

# ===========================================
# API Client Configuration
# ===========================================
# Maximum number of API request retries
MAX_RETRIES=3

# Base delay between retries in seconds
RETRY_DELAY=1.0

# Request timeout in seconds
REQUEST_TIMEOUT=30.0

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=5.0

# ===========================================
# Development Configuration
# ===========================================
# Set to true for development mode
DEVELOPMENT=false

# Python path for development
PYTHONPATH=./backend

# ===========================================
# Docker Configuration
# ===========================================
# Docker container names
COMPOSE_PROJECT_NAME=localwebmemory

# ===========================================
# Monitoring Configuration (Optional)
# ===========================================
# Prometheus metrics endpoint
PROMETHEUS_METRICS=false

# Grafana admin password
GRAFANA_ADMIN_PASSWORD=admin123

# ===========================================
# Security Configuration (Optional)
# ===========================================
# CORS allowed origins (use * for all origins in development)
CORS_ORIGINS=*

# Secret key for JWT tokens (if implementing authentication)
SECRET_KEY=your-secret-key-here

# ===========================================
# Extension Configuration
# ===========================================
# Backend URL for Chrome extension
BACKEND_URL=http://localhost:8000